{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2019",
            "DOM",
            "DOM.Iterable"
        ],
        "target": "es2019",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "incremental": true,
        "watch": true,
        "outDir": "./dist/"
    },
    "include": [
        "./index.ts",
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
